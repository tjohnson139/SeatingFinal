@model IEnumerable<Seating.Models.Employee>
}

@{
    ViewBag.Title = "Index";
    var modelOrdered = Model.OrderBy(m => m.FirstName);
}

<table class="table" style="margin-left:15em; width:60em">
    <tr>
        <th>
            First Name
        </th>
        <th>
            Last Name
        </th>
        <th>
            Display Name
        </th>
    </tr>

    @foreach (var item in modelOrdered)
    {
        if (item.NotActive == false)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DisplayName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.EmployeeID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.EmployeeID })
                </td>
            </tr>
        }
    }

</table>

<a style="margin-left:45em; margin-bottom:2em; margin-top:1em" class="btn btn-secondary btn-sm" href="/Employees/Create" role="button">New Employee</a>
